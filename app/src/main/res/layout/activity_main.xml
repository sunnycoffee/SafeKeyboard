<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <Button
            android:id="@+id/feed_back"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hapticFeedbackEnabled="true"
            android:text="点我震动" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:hint="系统键盘"
            android:inputType="text" />

        <EditText
            android:id="@+id/safeEditText"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:hint="安全输入-数字"
            android:inputType="number"
            android:tag="safeNumber" />

        <EditText
            android:id="@+id/safeEditText2"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:hint="安全输入-任意字符"
            android:inputType="textPassword"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/safeEditText3"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:hint="安全输入-任意字符" />

        <me.coffee.widget.keyboard.SecEditText
            android:id="@+id/safeEditText4"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:hint="安全输入-加密-数字"
            android:inputType="number"
            android:tag="safeNumber" />

        <me.coffee.widget.keyboard.SecEditText
            android:id="@+id/safeEditText5"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:hint="安全输入-加密-任意字符"
            android:inputType="textPassword"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_4"
            android:layout_width="match_parent"
            android:text="加密数字"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_5"
            android:layout_width="match_parent"
            android:text="加密任意字符"
            android:layout_height="wrap_content" />
        

    </LinearLayout>

</RelativeLayout>
